<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <!--Header-->
    <div class="header-wrapper clearfix">
        <header class="clearfix">
            <div class="col col-1-4 logo"><a href="/Home/Index/"><img src="~/Images/logo_sticky.png" alt="logo" /></a></div>
            <nav class="col col-3-4">
                <ul class="menu clearfix">
                    <li><a href="/Tours/Index">Tours</a></li>
                    <li><a href="/CartItem/Index" class="cart-Item">Cart</a><span class="cartItem"></span></li>

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <span class="loginName">Hi, <span>@User.Identity.Name</span> </span>
                            </li>
                            @Html.ActionLink("Log Out", "LogOff", "Account")
                        }
                        else
                        {
                            <li>
                                <a href="/Account/Login" class="log">Login</a>
                            </li>
                            <li>
                                <a href="/Account/Register" class="reg">Register</a>
                            </li>
                        }
                    }

                </ul>

            </nav>

        </header>
    </div>
    <!--Header-->
    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
    <div class="footer-wrapper">
        <footer class="clearfix">
            <article class="col col-1-3">
                <h5>Need help?</h5>
                <ul>
                    <li><a href="#">630-888-1732</a></li>
                    <li><a href="mailto:">mwhitfieldwork@gmail.com</a></li>
                </ul>
            </article>
            <article class="col col-1-3">
                <h5>About</h5>
                <ul>
                    <li>About Us</li>
                    <li>FAQ</li>
                    <li>Register</li>
                    <li>Terms and conditions</li>
                </ul>
            </article>
            <article class="col col-1-3">
                <h5>Discover</h5>
                <ul>
                    <li>Community blog</li>
                    <li>Tour guide</li>
                    <li>Wishlist</li>
                    <li>Gallery</li>
                </ul>
            </article>
            <div><img src="" alt="" /><img src="" alt="" /><img src="" alt="" /><img src="" alt="" /><img src="" alt="" /></div>
        </footer>
    </div>
    <!-- Footer -->
    <script src="~/Scripts/Cart.js"></script>
</body>
</html>
