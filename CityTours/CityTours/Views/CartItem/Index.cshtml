@model IEnumerable<CityTours.Models.CartItems>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CityLayout.cshtml";
}

<!-- Content -->
<div class="banner-wrapper">
    <section>
        <article class="banner cart">
            <div class="dark-bg"></div>
            <header><h1><!--Affordable Paris Tours--></h1></header>
            <span><!--City Tours/ City Guides/ City People--></span>
        </article>
    </section>
</div>


<div class="container cart">
    <section class="clearfix">
        <aside class="col col-1-3">
            <form action="" method="">
                <header><h4>Summary</h4></header>
            </form>

            <div class="side-support">
                <img src="~/Images/support_guy.gif" />
                <span class="help">Book <span class="pink">by phone</span></span>
                <span class="tel">630 888 2000</span>
                <span class="hours">Monday though Friday 9:00 AM to 7:30 PM</span>
            </div>

        </aside>

        <div class="product-cart col col-2-3">
            <div class="table">

                <div class="table-head clearfix">
                    <span class="col col-1-5"><strong>Item</strong></span>
                    <span class="col col-1-5"><strong>Name</strong></span>
                    <span class="col col-1-5"><strong>Discount</strong></span>
                    <span class="col col-1-5"><strong>Total</strong></span>
                    <span class="col col-1-5"><strong>Actions</strong></span>
                </div>

                @foreach(var i in Model) { 
                <div class="table-row clearfix">
                    <div class="table-data col col-1-5"><img class="summary-img" src="@i.ImageUrl" /></div>
                    <div class="table-data col col-1-5">
                        @i.ProductName
                    </div>
                    <div class="table-data col col-1-5">0%</div>
                    <div class="table-data col col-1-5">@i.Total</div>
                    <div class="table-data col col-1-5">
                            @using (Html.BeginForm("Delete", "CartItem", FormMethod.Post))
                            {
                                <input class="deleteTrash" name="id" type="hidden" value="@i.Id"/>
                                @*<input class="click-btn" type="submit" value="Click" />*@
                                <button class="click-btn" type="submit"><img class="icon-trash" src="/images/trash_can.png" /></button>
                            }
                                
                    </div>
                </div>
                }

            </div>
        </div>

    </section>

</div>
<!-- Content -->


