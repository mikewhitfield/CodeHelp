@model IEnumerable<CityTours.Models.CityProducts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MapLayout.cshtml";
}

<!-- Content -->
<!-- Banner -->
<div class="banner-wrapper">
    <section id="map">
        <div id="googleMap"></div>
    </section>
    @*<div id="bread-crumb"><span>Home > Tours</span></div>*@
</div>
<!-- Banner -->

<div class="container category clearfix">

    <!-- side navigation -->
    <aside class="left-menu col col-1-5 clearfix">
        <nav>
            <div class="top-side-menu">
                <ul>
                    <li class="nav-all" data-category="All">All tours</li>
                    <li class="nav-tour" data-category="Musuem">Museum tours</li>
                    <li class="nav-build" data-category="Building">Historics buildings</li>
                    <li class="nav-chur" data-category="Church">Churches</li>
                </ul>
            </div>
        </nav>

        <div class="filters">
            <form>
                <span>Filters</span>
                <div class="price-filter">
                    <select id="priceRanger">
                        <option value="">-- Select --</option>
                        <option value="0-49.99"> $0 - $49.99</option>
                        <option value="50-99.99"> $50 - $99.99</option>
                        <option value="100-149.99"> $100 - $149.99</option>
                        <option value="150-199.99"> $150 - $199.99</option>
                    </select>
                </div>
            </form>
        </div>

        <div class="side-support">
            <img src="/Images/support_guy.gif" />
            <span class="help">Need <span class="pink">Help?</span></span>
            <span class="tel">630 888 2000</span>
            <span class="hours">Monday though Friday 9:00 AM to 7:30 PM</span>
        </div>
    </aside>
    <!-- side navigation -->

    <div class="tour-list col col-4-5" >
        <div class="pagination col-r">
            <a href="#" class='page-left'>left</a>
            <a href="#" class='pag-right'>Right</a>
        </div> <!--pagination -->

        <section id="categories" class="tour-detail">
            @foreach(var item in Model) { 
            <article class="map_tour_info clearfix" data-shownum="">
                <figure class="col col-1-4">
                    <img src="@item.TourImage" alt="" />
                </figure>

                <div class="detail-info col col-1-2">
                    <h3><strong>@item.TourName</strong> Tour</h3>

                    <p>@item.Summary</p>
                    <a href="#" class="tour-map"><span>map icon</span></a>
                    <a href="#" class="tour-clock"><span>clock icon</span></a>
                    <a href="#" class="tour-speakr"><span>speaker icon</span></a>
                    <a href="#" class="tour-train"><span>train icon</span></a>
                    <span class="hidden tour-name">@item.CatTourName</span>
                </div>

                <div class="detail-price col col-1-4">
                    <span class="big-price"><strong>@item.TourPrice </strong></span>
                    <span class="small-price">99</span>
                    <span>*Per Person</span>
                    <a href="/ProductDetails/Details/@item.Id">Details</a>
                </div>
            </article>
            }
        </section>

        <div class="pagination">
            <a href="#" class='page-left'>left</a>
            <a href="#" class='pag-right'>Right</a>
        </div> <!--pagination -->
    </div>
</div>


<!-- Content -->


